@model List<ProductoViewModel>
@{
    ViewData["Title"] = "Producto";

}

<div class="contenedor-tabla">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Id</th>
                
               
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Name</td>
                    <td>@producto.Id</td>
                    <td><a href="/Equipos/editar/@producto.Id">Editar</a></td>
                    <td>@*<a href="/Equipos/eliminar/@equipo.Id">Eliminar</a>*@</td>
                </tr>
            }
        </tbody>
    </table>

</div>
